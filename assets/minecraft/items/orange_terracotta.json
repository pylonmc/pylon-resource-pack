{
  "model": {
    "type": "select",
    "property": "custom_model_data",
    "cases": [
      {
        "when": "pylonbase:fluid_pipe_bronze",
        "model": {
          "type": "model",
          "model": "pylonbase:block/machines/pipes/bronze_pipe"
        }
      },
      {
        "when": "pylonbase:smeltery_output_hatch",
        "model": {
          "type": "model",
          "model": "pylonbase:block/machines/smeltery/smeltery_output_hatch_north"
        }
      }
    ],
    "fallback": {
      "type": "model",
      "model": "block/orange_terracotta"
    }
  }
}