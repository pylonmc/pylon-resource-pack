{
  "model": {
    "type": "select",
    "property": "custom_model_data",
    "cases": [
      {
        "when": "pylonbase:confetti_popper",
        "model": {
          "type": "condition",
          "property": "using_item",
          "on_false": {
            "type": "model",
            "model": "pylonbase:item/tools/confetti_popper_hand"
          },
          "on_true": {
            "type": "select",
            "property": "display_context",
            "cases": [
              {
                "model": {
                  "type": "model",
                  "model": "pylonbase:item/tools/confetti_popper_hand"
                },
                "when": [
                  "gui",
                  "ground",
                  "fixed"
                ]
              }
            ],
            "fallback": {
              "type": "model",
              "model": "pylonbase:item/tools/confetti_popper_charged"
            }
          },
          "fallback": {
            "type": "model",
            "model": "pylonbase:item/tools/confetti_popper_hand"
          }
        }
      }
    ],
    "fallback":{
      "type": "model",
      "model": "item/firework_rocket"
    }
  }
}