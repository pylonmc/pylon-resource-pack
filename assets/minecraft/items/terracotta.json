{
  "model": {
    "type": "select",
    "property": "custom_model_data",
    "cases": [
      {
        "when": "pylonbase:fluid_pipe_copper",
        "model": {
          "type": "model",
          "model": "pylonbase:block/machines/pipes/copper_pipe"
        }
      },
      {
        "when": "pylonbase:copper",
        "model": {
          "type": "model",
          "model": "pylonbase:block/fluids/copper"
        }
      }
    ],
    "fallback": {
      "type": "model",
      "model": "block/terracotta"
    }
  }
}