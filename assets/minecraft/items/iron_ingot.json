{
  "model": {
    "type": "select",
    "property": "custom_model_data",
    "cases": [
      {
        "when": "pylonbase:tin_ingot",
        "model": {
          "type": "model",
          "model": "pylonbase:item/resources/tin_ingot"
        }
      },
      {
        "when": "pylonbase:nickel_ingot",
        "model": {
          "type": "model",
          "model": "pylonbase:item/resources/nickel_ingot"
        }
      },
      {
        "when": "pylonbase:cobalt_ingot",
        "model": {
          "type": "model",
          "model": "pylonbase:item/resources/cobalt_ingot"
        }
      }
    ],
    "fallback": {
      "type": "model",
      "model": "item/iron_ingot"
    }
  }
}