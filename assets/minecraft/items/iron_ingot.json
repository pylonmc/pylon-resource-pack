{
  "model": {
    "type": "select",
    "property": "custom_model_data",
    "cases": [
      {
        "when": "pylon:tin_ingot",
        "model": {
          "type": "model",
          "model": "pylon:item/resources/tin_ingot"
        }
      },
      {
        "when": "pylon:nickel_ingot",
        "model": {
          "type": "model",
          "model": "pylon:item/resources/nickel_ingot"
        }
      },
      {
        "when": "pylon:cobalt_ingot",
        "model": {
          "type": "model",
          "model": "pylon:item/resources/cobalt_ingot"
        }
      }
    ],
    "fallback": {
      "type": "model",
      "model": "item/iron_ingot"
    }
  }
}