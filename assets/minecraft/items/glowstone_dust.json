{
  "model": {
    "type": "select",
    "property": "custom_model_data",
    "cases": [
      {
        "when": "pylonbase:bronze_dust",
        "model": {
          "type": "model",
          "model": "pylonbase:item/resources/bronze_dust"
        }
      },
      {
        "when": "pylonbase:copper_dust",
        "model": {
          "type": "model",
          "model": "pylonbase:item/resources/copper_dust"
        }
      },
      {
        "when": "pylonbase:crushed_raw_copper",
        "model": {
          "type": "model",
          "model": "pylonbase:item/resources/crushed_raw_copper"
        }
      },
      {
        "when": "pylonbase:gold_dust",
        "model": {
          "type": "model",
          "model": "pylonbase:item/resources/gold_dust"
        }
      },
      {
        "when": "pylonbase:crushed_raw_gold",
        "model": {
          "type": "model",
          "model": "pylonbase:item/resources/crushed_raw_gold"
        }
      },
      {
        "when": "pylonbase:shimmer_dust_3",
        "model": {
          "type": "model",
          "model": "pylonbase:item/resources/shimmer_dust_3"
        }
      }
    ],
    "fallback": {
      "type": "model",
      "model": "item/glowstone_dust"
    }
  }
}