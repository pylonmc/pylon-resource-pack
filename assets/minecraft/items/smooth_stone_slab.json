{
  "model": {
    "type": "select",
    "property": "custom_model_data",
    "cases": [
      {
        "when": "pylonbase:grindstone",
        "model": {
          "type": "model",
          "model": "pylonbase:block/machines/simple_machines/grindstone"
        }
      },
      {
        "when": "pylonbase:magic_altar",
        "model": {
          "type": "model",
          "model": "pylonbase:block/machines/simple_machines/magic_altar"
        }
      }
    ],
    "fallback": {
      "type": "model",
      "model": "block/smooth_stone_slab"
    }
  }
}