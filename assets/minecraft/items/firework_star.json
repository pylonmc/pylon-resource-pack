{
  "model": {
    "type": "select",
    "property": "custom_model_data",
    "cases": [
      {
        "when": "pylon:fireproof_rune",
        "model": {
          "type": "model",
          "model": "pylon:item/tools/fireproof_rune"
        }
      },
      {
        "when": "pylon:soulbound_rune",
        "model": {
          "type": "model",
          "model": "pylon:item/tools/soulbound_rune"
        }
      },
      {
        "when": "pylon:shallow_core_chunk",
        "model": {
          "type": "model",
          "model": "pylon:item/resources/shallow_core_chunk"
        }
      },
      {
        "when": "pylon:subsurface_core_chunk",
        "model": {
          "type": "model",
          "model": "pylon:item/resources/subsurface_core_chunk"
        }
      },
      {
        "when": "pylon:intermediate_core_chunk",
        "model": {
          "type": "model",
          "model": "pylon:item/resources/intermediate_core_chunk"
        }
      }
    ],
    "fallback": {
      "type": "minecraft:model",
      "model": "minecraft:item/firework_star",
      "tints": [
        {
          "type": "minecraft:constant",
          "value": -1
        },
        {
          "type": "minecraft:firework",
          "default": -7697782
        }
      ]
    }
  }
}