{
  "model": {
    "type": "select",
    "property": "custom_model_data",
    "cases": [
      {
        "when": "pylonbase:fluid_pipe_steel",
        "model": {
          "type": "model",
          "model": "pylonbase:block/machines/pipes/steel_pipe"
        }
      },
      {
        "when": "pylonbase:steel",
        "model": {
          "type": "model",
          "model": "pylonbase:block/fluids/steel"
        }
      },
      {
        "when": "pylonbase:cargo_duct",
        "model": {
          "type": "model",
          "model": "pylonbase:block/machines/cargo/cargo_duct"
        }
      }
    ],
    "fallback": {
      "type": "model",
      "model": "block/gray_concrete"
    }
  }
}